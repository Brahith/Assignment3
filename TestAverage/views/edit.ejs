<%- include('Partials/header.ejs') %>

<div class="container">
  <h2>Edit Task</h2>
  <form action="/edit/<%= task._id %>" method="POST">

    <div class="form-group">
      <label for="subject">Test Name</label>
      <input type="text" id="subject" name="subject" class="form-control" value="<%= task.subject %>" required>
    </div>

    <div class="form-group">
      <label for="">mark</label>
      <input type="number" id="mark" name="mark" class="form-control" value="<%= task.mark %>" required>
    </div>

    <div class="form-group">
      <label for="">weight</label>
      <input type="number" id="Weight" name="Weight" class="form-control" value="<%= task.weight %>" required>
    </div>

    <div class="form-group">
      <label for="date">date</label>
      <input type="date" id="date" name="date" class="form-control" value="<%= task.date.toISOString().substring(0, 10) %>" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
</div>

<%- include('Partials/footer.ejs') %>
